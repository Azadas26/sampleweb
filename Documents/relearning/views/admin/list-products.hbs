<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <a href="/admin/add" class="btn btn-success">Add_Products</a>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>

                        <td>{{@index}}</td>
                        <td>{{this.Name}}</td>
                        <td>{{this.Discription}}</td>
                        <td>{{this.Price}}</td>
                        <td><img src="/admin_image/{{this._id}}.jpg" style="width: 200px; height: 200px;" alt=""></td>
                        <td>
                            <a href="/admin/delete?id={{this._id}}" class="btn btn-danger mt-5"
                                onclick="return confirm('Are you sure to delete this product({{this.Name}}) ??')">Delete</a>
                            <br>
                            <a href="/admin/edit?id={{this._id}}" class="btn btn-primary mt-3">Edit</a>
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>