<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <form action="/admin/edit?id={{data._id}}" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="exampleInputPassword1">Name</label>
                    <input type="text" name="Name" class="form-control" id="exampleInputPassword1"
                        value="{{data.Name}}">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Discription</label>
                    <input type="text" name="Discription" class="form-control" id="exampleInputPassword1"
                        value="{{data.Discription}}">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Parice</label>
                    <input type="number" name="Price" class="form-control" id="exampleInputPassword1"
                        value="{{data.Price}}">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Image</label>
                    <input type="file" name="Image" class="form-control" id="exampleInputPassword1" placeholder="Image">
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>